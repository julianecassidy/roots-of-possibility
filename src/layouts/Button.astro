---
interface Props {
	color: "primary" | "secondary";
    width?: string | number;
}

const { color, width } = Astro.props;
let style = '';

switch (color) {
    case 'primary':
        style = "bg-primary text-base-100 hover:bg-secondary";
        break;
    case 'secondary':
        style = "bg-base-100 text-neutral hover:bg-accent";
        break;
}

const widthFormatted = width ? `w-${width}` : "";

console.log(style);
---

<button class=`${style} ${widthFormatted} border border-none rounded-3xl px-6 py-1 transition duration-200 ease-in-out max-h-12 text-2xl`>
    <slot />
</button>