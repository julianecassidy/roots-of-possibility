---
import type { tTitleStyles } from "types";

interface Props {
    pageTitleWords: tTitleStyles[];
    pageDesc: string;
}

const { pageTitleWords, pageDesc } = Astro.props;

const pageTitle = pageTitleWords
    .map((word) => {
        return `<span class="font-${word.style} ${word.style === "display" ? "text-7xl" : "text-5xl"}">${word.text}</span>`;
    })
    .join(" ");

console.log(pageTitle);
---

<div class="w-full md:w-2/3 mx-auto mb-48 relative">
    <img
        src="florals/leaves-header.png"
        class="opacity-20 -rotate-[70deg] w-1/3 absolute -top-24 right-12 sm:-top-56 sm:right-32 z-0"
    />
    <div
        class="flex justify-center flex-wrap gap-x-1 relative inset-x-0 h-16 z-10"
    >
        <h1 class="w-full md:w-2/3" set:html={pageTitle} />
        <div class="text-2xl px-6 md:px-6 md:w-2/3">{pageDesc}</div>
    </div>
</div>
