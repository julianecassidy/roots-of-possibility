---
import type { TitleStyles } from "types";

interface Props {
    pageTitleWords: TitleStyles[];
    pageDesc: string;
}

const { pageTitleWords, pageDesc } = Astro.props;

const pageTitle = pageTitleWords
    .map((word) => {
        return `<span class="${word.style === "display"
            ? "font-display text-7xl"
            : "font-serif text-5xl"}"
                >${word.text}
            </span>`;
    })
    .join(" ");

---

<div class="w-full md:w-2/3 mx-auto mt-20 mb-12 relative">
    <img
        src="florals/leaves-header.png"
        class="opacity-20 -rotate-[70deg] w-1/3 absolute -top-24 right-12 sm:-top-56 sm:right-32 xl:-top-80 xl:right-48 z-0"
    />
    <div
        class="flex justify-center flex-wrap gap-x-1 relative inset-x-0 z-10"
    >
        <h1 class="w-full md:w-2/3 mb-8" set:html={pageTitle} />
        <div class="text-3xl px-6 md:px-6 md:w-2/3">{pageDesc}</div>
    </div>
</div>
