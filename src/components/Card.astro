---
import type { ServiceCard } from "types";
import { Image } from "astro:assets";
import Button from "@layouts/Button.astro";

type Props = ServiceCard;

const {
    imagePath,
    altText,
    title,
    description,
    buttonLink,
    bgColor,
    textColor,
    buttonColor,
    buttonText,
} = Astro.props;
---

<div
    class=`w-[350px] h-auto flex flex-col items-center justify-between gap-4 ${bgColor} ${textColor} p-6 border border-none rounded-t-[180px] rounded-b-xl relative z-30`
>
    <Image
        src={imagePath}
        alt={altText}
        width={320}
        height={320}
        class="w-[320px] h-[320px] object-cover border border-none rounded-t-[150px] rounded-b-lg relative z-30"
    />
    <h3 class="text-center -my-1">{title}</h3>
    <div class="text-lg">{description}</div>
    <Button color={buttonColor} link={buttonLink}> {buttonText} </Button>
</div>
