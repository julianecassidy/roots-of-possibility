<form name="contact" method="POST" netlify-honeypot data-netlify="true">
    <div class="flex flex-wrap justify-between gap-4">
        <label for="name" class="form-control w-full lg:w-7/12">
            <span class="form-label">Name *</span>
            <input
                id="name"
                type="text"
                placeholder="Please enter your name"
                required
            />
        </label>
        <label for="pronouns" class="form-control w-full lg:w-1/3">
            <span class="form-label">Pronouns</span>
            <input
                id="pronouns"
                type="text"
                placeholder="How should I refer to you?"
            />
        </label>
        <label for="email" class="form-control w-full">
            <span class="form-label">Email *</span>
            <input
                id="email"
                type="email"
                placeholder="email@site.com"
                required
            />
        </label>
        <label for="phone" class="form-control w-full">
            <span class="form-label">Phone</span>
            <input id="phone" type="tel" placeholder="555-555-5555" required />
        </label>
        <label for="contact-method" class="form-control w-full lg:w-5/12">
            <span class="form-label">How do you prefer to be contacted?</span>
            <select id="contact-method">
                <option value="email">Email</option>
                <option value="phone">Phone</option>
            </select>
        </label>
        <label for="parent" class="form-control w-full lg:w-6/12">
            <span class="form-label"
                >Are you interested in therapy for yourself or your child?</span
            >
            <select id="parent">
                <option value="email">Myself</option>
                <option value="phone">My Child</option>
            </select>
        </label>
        <label for="message" class="form-control w-full">
            <span class="form-label">Message*</span>
            <textarea id="message" rows="5" required></textarea>
        </label>
        <p class="hidden">
            <label>
              Don’t fill this out if you’re human: <input name="bot-field" />
            </label>
          </p>
        <button id="submit-button" type="submit">Submit</button>
    </div>
</form>

<style>
    .form-label {
        @apply text-lg;
    }
    input,
    select,
    textarea {
        @apply text-lg bg-[#DAE0D0] border border-none rounded-2xl;
    }
    input::placeholder {
        @apply text-neutral opacity-60;
    }
    input,
    select {
        @apply h-10 px-4;
    }
    #submit-button {
        @apply mx-auto bg-primary text-base-100 hover:bg-secondary border border-none rounded-full px-6 py-1 transition duration-200 ease-in-out max-h-12 text-2xl;
    }
</style>
