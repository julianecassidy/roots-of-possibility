---
import { Image } from "astro:assets";
import { PSYCHOLOGYTODAY, INSTAGRAM } from "@config";
import psychologyToday from "@assets/logos/psychology-today-white.png";
---

<footer>
    <svg viewBox="0 500 900 75" class="mt-12 w-full"
        ><path
            d="M0 532L37.5 526.7C75 521.3 150 510.7 225 505.3C300 500 375 500 450 508.7C525 517.3 600 534.7 675 534.7C750 534.7 825 517.3 862.5 508.7L900 500L900 601L862.5 601C825 601 750 601 675 601C600 601 525 601 450 601C375 601 300 601 225 601C150 601 75 601 37.5 601L0 601Z"
            fill="#3A5A40"
            stroke-linecap="round"
            stroke-linejoin="miter"></path></svg
    >
    <div class="bg-secondary text-base-100 flex">
        <div class="">
            <a
                href="/"
                class="logo whitespace-nowrap"
                title="home"
                aria-label="home"
            >
                <img
                    src="./logo.png"
                    alt="roots of possiblity logo"
                    class="w-24"
                />
            </a>
        </div>
        <div class="footer-menu flex">
            <div>
                <h3>Practice</h3>
                <ul class="text-xl">
                    <a href="/about">
                        <li>About Julia</li>
                    </a>
                    <a href="/philosophy">
                        <li>Philosophy</li>
                    </a>
                    <a href="/FAQ">
                        <li>FAQ</li>
                    </a>
                    <a href="/resources">
                        <li>Resources</li>
                    </a>
                </ul>
            </div>
            <div>
                <h3>Services</h3>
                <ul class="text-xl">
                    <a href="/children">
                        <li>Therapy for Children</li>
                    </a>
                    <a href="/adolescents">
                        <li>Therapy for Adolescents</li>
                    </a>
                    <a href="/young-adutls">
                        <li>Therapy for Young Adults</li>
                    </a>
                    <a href="/animal-assisted">
                        <li>Animal Assisted Therapy</li>
                    </a>
                    <a href="/trauma">
                        <li>Trauma Therapy</li>
                    </a>
                    <a href="/attachment">
                        <li>Attachment Therapy</li>
                    </a>
                    <a href="/self-harm">
                        <li>Sefl-Harm Therapy</li>
                    </a>
                </ul>
            </div>
        </div>
        <div class="">
            <h3>Connect with Roots of Possibility</h3>
            <div class="flex flex-wrap">
                <a href={PSYCHOLOGYTODAY.href}
                    ><Image
                        src={psychologyToday}
                        alt="psychology today logo"
                        width={100}
                    /></a
                >
                <a href={INSTAGRAM.href}>
                <svg width="24" height="24" viewBox="0 0 24 24"
                    ><path
